<form id="contact-form" action="/photoAdd" method="POST" class="tm-contact-form">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="name" class="form-control rounded-0" placeholder="Name" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea rows="8" name="message" class="form-control rounded-0" placeholder="Message" required></textarea>
    </div>
    <div class="form-group">
        Upload Your Image <br> <input type="file" name="image" class="rounded-0" placeholder="Upload your image"
            required />
    </div>
    <div class="form-group mb-0">
        <button type="submit"
            class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Submit</span></button>
    </div>
</form>