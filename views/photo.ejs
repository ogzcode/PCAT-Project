<%- include("partials/_header.ejs") -%>

	<body>
		<div class="tm-page-wrap mx-auto">
			<div class="position-relative">
				<%- include("partials/_nav.ejs") -%>
					<div class="tm-welcome-container tm-fixed-header tm-fixed-header-1">
						<div class="text-center">
							<p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 text-white mx-auto">Background
								image can be fixed. Content will simply slide over.</p>
						</div>
					</div>

					<!-- Header image -->
					<div id="tm-fixed-header-bg"></div>
			</div>

			<!-- Page content -->
			<div class="container-fluid">
				<div class="mx-auto tm-content-container">
					<main>
						<div class="row mb-5 p-5">
							<div class="col-12">
								<!-- Video player 1422x800 -->
								<img src="<%= photo.image %>" width="1422" height="800" />
							</div>
						</div>
						<div class="row mb-5 p-5">
							<div class="col-xl-8 col-lg-7 pr-5">
								<!-- Video description -->
								<div class="tm-video-description-box">
									<h2 class="mb-5 tm-video-title">
										<%= photo.title %>
									</h2>
									<p class="mb-4">
										<%= photo.description %>
									</p>
								</div>
							</div>
							<div
								class="col-xl-4 col-lg-5 bg-light d-flex flex-column justify-content-center align-items-center py-4">
								<a class="btn btn-primary mb-4 w-50" href="/photo/edit/<%= photo._id %>">Update</a>
								<a id="deleteBtn" class="btn btn-danger w-50 text-white" href="/photo/delete/<%= photo._id %>?_method=DELETE">Delete</a>
							</div>
						</div>
					</main>

					<!-- Subscribe form and footer links -->
					<%- include("partials/_footer.ejs") -%>
				</div> <!-- .tm-content-container -->
			</div>
		</div>

		<script src="/js/jquery-3.4.1.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script>
			$(document).ready(function () {
				$('.tm-likes-box').click(function (e) {
					e.preventDefault();
					$(this).toggleClass('tm-liked');

					if ($(this).hasClass('tm-liked')) {
						$('#tm-likes-count').html('486 likes');
					} else {
						$('#tm-likes-count').html('485 likes');
					}
				});
			});
		</script>
	</body>

	</html>